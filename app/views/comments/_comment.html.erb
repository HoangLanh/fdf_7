<li>
  <div class="avatar">
    <%= image_tag comment.user_avatar.url, size: Settings.product.comment.avatar_size %>
  </div>
  <div class="comment-body">
    <div class="user-name"><%= comment.user_name %></div>
    <div class="comment-rating" data-score="<%= comment.rating %>"></div>
    <div class="content"><%= comment.content %></div>
    <div class="timestamp">
      <%= time_ago_in_words comment.created_at %>
    </div>
  </div>
</li>
