<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "user.id" %></th>
      <th><%= t "user.name" %></th>
      <th><%= t "user.email" %></th>
      <th><%= t "user.address" %></th>
      <th><%= t "user.phone" %></th>
      <th><%= t "user.avatar" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= will_paginate %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
        <td>
          <% if user.avatar.present? %>
            <%= link_to image_tag(user.avatar, size: Settings.admin.size),
              admin_users_path %>
          <% else %>
            <%= link_to image_tag(Settings.admin.url,
              size: Settings.admin.size), admin_users_path %>
          <% end %>
        </td>
        <td>
          <%= link_to t("admin.delete"), "#",
            method: :delete, data: {confirm: t("admin.messages")},
            class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
