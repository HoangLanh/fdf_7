<div class="row">
  <div class="col-md-8">
    <h1><%= t "views.products.index.h1" %></h1>
  </div>
</div>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-4" >
      <div class="thumbnail product-card">
        <%= link_to product do %>
          <%= image_tag product.image.url(:thumb) if product.image? %>
          <div class="caption">
            <h3><%= product.price %> $</h3>
            <h4><%= product.name.upcase %></h4>
            <h4>
              <%= t "views.products.index.ratescore" %>
              <%= product.rate_score %>
            </h4>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate %>
